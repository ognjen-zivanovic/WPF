<Window x:Class="WpfApp1.CheckoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CheckoutWindow" Height="720" Width="1280">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Arial" />
            <Setter Property="Margin" Value="10,10,0,0" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="200" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Room Image Section -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Room Image -->
        <Image Grid.Column="1" Name="RoomImage" Height="300" Width="400" VerticalAlignment="Top" Margin="10" />

        <!-- Room Info Texts -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top">
            <TextBlock Name="RoomIdTextBlock" Text="Room ID: " />
            <TextBlock Name="CheckInDateTextBlock" Text="Check-In Date: " />
            <TextBlock Name="CheckOutDateTextBlock" Text="Check-Out Date: " />
            <TextBlock Name="TotalPriceTextBlock" Text="Total Price: " />
        </StackPanel>

        <!-- User Info Section -->
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,200,0,0">
            <TextBlock Text="Your Information" FontSize="18" FontWeight="Bold" Margin="10,0,0,10" />
            <TextBox Name="NameTextBox" />
            <TextBox Name="EmailTextBox"  />
            <TextBox Name="PhoneTextBox"/>

        </StackPanel>

        <!-- Purchase Button -->
        <Button Content="Buy Now" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,10,30" />
    </Grid>
</Window>
