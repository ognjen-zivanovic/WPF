<Window x:Class="WpfApp1.AdminReservationsWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WpfApp1" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="AdminReservationsWindow" Width="1280" Height="720" mc:Ignorable="d">
    <Grid Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#F0F8FF">
        <StackPanel Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Text="Admin Reservations" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox Name="SearchTextBox" Grid.Column="0" Height="30" Margin="0,0,10,0" Padding="5" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#add8e6" BorderBrush="#888" BorderThickness="1" FontSize="16" />
                <Button Name="SearchButton" Grid.Column="1" Width="100" Height="30" Margin="0,0,0,0" Padding="5" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#add8e6" Click="SearchButton_Click" Content="Search" FontSize="16" />
            </Grid>
            <ScrollViewer Name="ReservationsScrollViewer" Width="800" Height="550" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <StackPanel Name="ReservationsStackPanel">
                    <!--  Reservation items will be added here dynamically  -->
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
