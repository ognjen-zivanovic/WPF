<UserControl x:Class="HotelRezervacije.KarticaSobeAdmin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:HotelRezervacije" Width="750" Height="Auto" Margin="10">
    <Border Background="#F0F8FF" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
        <StackPanel Margin="10">
            <Popup x:Name="AmenityPopup" Placement="MousePoint" StaysOpen="False">
                <Border Padding="5" Background="White" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                    <StackPanel x:Name="AmenityPopupList" />
                </Border>
            </Popup>
            <Grid Margin="0,0,0,10">
                <Image x:Name="RoomImage" Stretch="UniformToFill" />

                <Image x:Name="SwapImage" Width="50" Height="50" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" MouseDown="SwapImage_Click" Visibility="Hidden" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <StackPanel Margin="0,0,0,5">
                        <TextBlock FontWeight="Bold" Text="Room Name:" />
                        <TextBox x:Name="RoomNameText" FontSize="18" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5">
                        <TextBlock FontWeight="Bold" Text="Price per Night:" />
                        <TextBox x:Name="PriceText" FontSize="18" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5">
                        <TextBlock FontWeight="Bold" Text="Capacity:" />
                        <TextBox x:Name="CapacityText" FontSize="18" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5">
                        <TextBlock FontWeight="Bold" Text="Description:" />
                        <TextBox x:Name="DescriptionText" FontSize="18" />
                    </StackPanel>
                    <StackPanel Margin="0,0,0,5">
                        <TextBlock FontWeight="Bold" Text="Amenities:" />
                        <Grid Height="Auto" Margin="10,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <WrapPanel x:Name="AmenityPanel" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="#00000000" Orientation="Horizontal" />
                            <Button x:Name="AddAmenityButton" Grid.Column="1" HorizontalAlignment="Right" Click="AddAmenityButton_Click" Content="Add Amenity" FontSize="14" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Height="Auto" Margin="10,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Button x:Name="DeleteButton" Grid.Column="0" Width="200" Height="45" Margin="0,0,10,0" Padding="5" Background="#EC142A" Content="Delete Room" FontSize="14" FontWeight="Bold" Foreground="White" Style="{x:Null}" />
                <TextBlock Name="ErrorTekstBlock" Grid.Column="1" VerticalAlignment="Center" FontSize="14" Foreground="Red" Text="" />
                <Button x:Name="ApplyButton" Grid.Column="2" VerticalAlignment="Center" Click="ApplyButton_Click" Content="Apply Changes" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
