<UserControl x:Class="HotelRezervacije.StavkaPogodnostiAdmin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Name="RootGrid">
        <StackPanel Orientation="Horizontal">
            <TextBlock Name="AmenityIcon" FontFamily="{StaticResource UnicodeFont}" FontSize="18" />
            <TextBlock Name="AmenityName" Margin="5,0,10,0" FontSize="18" />
        </StackPanel>
        <Button Name="DeleteButton" Width="22" Height="22" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Red" BorderThickness="0" Click="DeleteButton_Click" Content="X" Cursor="Hand" FontSize="10" Foreground="White" Style="{x:Null}" Visibility="Hidden" />
    </Grid>
</UserControl>
