<UserControl x:Class="WpfApp1.AdminAmenityItem" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="50" Height="50">
    <Grid x:Name="RootGrid" ToolTip="{Binding AmenityName, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Image x:Name="IconImage" Stretch="UniformToFill" />
        <Button x:Name="DeleteButton" Width="16" Height="16" Padding="0" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Red" BorderThickness="0" Click="DeleteButton_Click" Content="X" Cursor="Hand" FontSize="10" Foreground="White" Visibility="Hidden" />
    </Grid>
</UserControl>
