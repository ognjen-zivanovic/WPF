<UserControl x:Class="WpfApp1.AdminReservationCard" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:WpfApp1" Width="750" Height="Auto" Margin="10">
    <Border Background="#F0F8FF" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
        <StackPanel Margin="18" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Name="RoomNameText" FontSize="32" FontWeight="Bold" />
            <TextBlock Name="IDText" Margin="0,5,0,0" FontSize="16" />
            <TextBlock Name="DateText" Margin="0,5,0,0" FontSize="16" />
            <TextBlock Name="UserNameText" Margin="0,5,0,0" FontSize="16" />
            <TextBlock Name="UserContactText" Margin="0,5,0,0" FontSize="16" />
            <TextBlock Name="GuestNumberText" Margin="0,5,0,0" FontSize="16" />
            <TextBlock Name="PriceText" Margin="0,5,0,0" FontSize="24" FontWeight="Bold" />
        </StackPanel>
    </Border>
</UserControl>
