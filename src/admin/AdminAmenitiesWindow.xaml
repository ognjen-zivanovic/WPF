<Window x:Class="WpfApp1.AdminAmenitiesWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WpfApp1" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="AdminAmenitiesWindow" Width="1280" Height="720" mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Text="Amenities" />
            <Button Name="AddAmenityButton" Margin="10,0,0,0" Click="AddAmenityButton_Click" Content="Add Amenity" />
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <StackPanel Name="AmenitiesStackPanel" />
        </ScrollViewer>

    </Grid>
</Window>
