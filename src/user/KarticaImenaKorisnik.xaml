<UserControl x:Class="HotelRezervacije.KarticaImenaKorisnik" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:HotelRezervacije" Width="Auto" Height="Auto">
    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
        <StackPanel>
            <TextBlock FontSize="16" Text="Name:" />
            <TextBox Width="200" Height="30" Background="#add8e6" BorderBrush="#888" BorderThickness="1" FontSize="16" Text="{Binding ImeGosta}" />
        </StackPanel>
        <StackPanel Margin="20,0,0,0">
            <TextBlock FontSize="16" Text="Surname:" />
            <TextBox Width="200" Height="30" Background="#add8e6" BorderBrush="#888" BorderThickness="1" FontSize="16" Text="{Binding PrezimeGosta}" />
        </StackPanel>
    </StackPanel>
</UserControl>
