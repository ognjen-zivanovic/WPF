<UserControl x:Class="HotelRezervacije.KarticaSobeKorisnik" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:HotelRezervacije" Width="750" Height="Auto" Margin="10">
    <Border Background="#F0F8FF" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
        <StackPanel Margin="10">
            <Image x:Name="RoomImage" Margin="0,0,0,10" Stretch="UniformToFill" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="RoomNameText" FontSize="20" FontWeight="Bold" />
                    <TextBlock x:Name="PriceText" FontSize="24" FontWeight="Bold" Foreground="DarkGreen" />
                    <TextBlock x:Name="CapacityText" FontSize="16" />
                    <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" />
                    <WrapPanel x:Name="AmenityPanel" Margin="0,5" Orientation="Horizontal" />
                </StackPanel>
                <Button Grid.Column="1" Margin="20,10,0,0" Padding="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BookRoom_Click" Content="Book Room" FontSize="30" FontWeight="Bold" />
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
