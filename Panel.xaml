    <Grid>
        <!--  StackPanel to hold the ItemsControl  -->
        <StackPanel>
            <ItemsControl x:Name="DynamicChildren">
                <ItemsControl.ItemsPanel>
                    <!--  Use StackPanel to arrange items vertically  -->
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!--  Define the ItemTemplate to specify the layout of each item  -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,4,4" Background="#F0F8FF" BorderBrush="Gray" BorderThickness="1" CornerRadius="10">
                            <StackPanel Margin="10,4,10,10">
                                <!--  Content for each item goes here  -->
                                <ContentControl Content="{Binding}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</ItemsControl>
